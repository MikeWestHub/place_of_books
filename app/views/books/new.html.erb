<%= link_to "Home", books_path %>
<h1>Add Books</h1>
<p>Add to the selection below</p>

<%= form_for @book do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>

  <fieldset>
    <%= f.label :author_name %>
    <%= f.text_field :author_name %>
  </fieldset>

  <%= f.submit %>

<% end %>
